@model Jobbplan.Models.Registrer

@{
    ViewBag.Title = "Registrer";
}

<h2>Registrer deg</h2>
<p class="text-danger">
    Passord må være minimum @Membership.MinRequiredPasswordLength tegn.
</p>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/passordValidator.js")" type="text/javascript"></script>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "Brukeren ble ikke oprettet. Prøv igjen", new { @class = "text-danger" })
    <div>
        <fieldset>
            <legend>Opprett konto</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.Fornavn)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Fornavn, new { id = "FornavntTxt" })
                @Html.ValidationMessageFor(m => m.Fornavn, "", new { @class = "text-danger" })
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Etternavn)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Etternavn, new { id = "EtternavnTxt" })
                @Html.ValidationMessageFor(m => m.Etternavn, "", new { @class = "text-danger" })
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Telefonnummer)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Telefonnummer, new { id = "TelefonnummerTxt" })
                @Html.ValidationMessageFor(m => m.Telefonnummer, "", new { @class = "text-danger" })
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Email)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Email, new { id = "EmailTxt" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Adresse)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Adresse, new { id = "AdresseTxt" })
                @Html.ValidationMessageFor(m => m.Adresse, "", new { @class = "text-danger" })
            </div>


            <div class="editor-label">
                @Html.LabelFor(m => m.Postnummer)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Postnummer, new { id = "PostnummerTxt" })
                @Html.ValidationMessageFor(m => m.Postnummer, "", new { @class = "text-danger" })
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Poststed)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Poststed, new { id = "PoststedTxt" })
                @Html.ValidationMessageFor(m => m.Poststed, "", new { @class = "text-danger" })
            </div>


            <div class="editor-label">
                @Html.LabelFor(m => m.Passord)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Passord, new { @id = "passord" })
                @Html.ValidationMessageFor(m => m.Passord, "", new { @class = "text-danger" })
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.BekreftPassord)
            </div>
            <div class="editor-field" onkeyup="checkPasswordMatch();return false;">
                @Html.PasswordFor(m => m.BekreftPassord, new { @id = "passord2" })
                @Html.ValidationMessageFor(m => m.BekreftPassord)
            </div>
            <div id="passordMatch"></div>
            <br />
            <p>
                <input type="submit" value="Registrer" class="btn btn-success"  onclick="LeggTilPerson()"/>
            </p>
        </fieldset>
        
    </div>
}

